{
  "name": "Back2Rc4",
  "version": "1.0.0",
  "engines": {
    "yarn": "1.9.2"
  },
  "description": "Backend of RC4Cal",
  "main": "index.js",
  "repository": "git@github.com:winsonhys/Back2Rc4.git",
  "author": "<winsonheng@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^4.1.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "^0.0.40",
    "@types/express-validator": "^3.0.0",
    "@types/faker": "^4.1.2",
    "@types/joi": "^13.3.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.3",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.3.2",
    "@types/nodemailer": "^4.6.2",
    "@types/sequelize": "^4.27.20",
    "@types/supertest": "^2.0.4",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.2.0",
    "faker": "^4.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "lolex": "^2.7.1",
    "mocha": "^5.2.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "mysql2": "^1.5.3",
    "nodemailer": "^4.6.7",
    "nodemon": "^1.17.5",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "sequelize-typescript": "^0.6.6-beta.1",
    "supertest": "^3.1.0",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "postinstall": "./node_modules/.bin/tsc",
    "start": "NODE_PATH=./dist node dist/index.js",
    "tsc:watch": "tsc -w",
    "sequelize": "./node_modules/.bin/sequelize",
    "dev:drop": "NODE_ENV=development yarn sequelize db:drop",
    "dev:create": "NODE_ENV=development yarn sequelize db:create",
    "dev:migrate": "NODE_ENV=development yarn sequelize db:migrate",
    "dev:init": "yarn dev:drop; yarn dev:create; yarn dev:migrate ",
    "test:migrate": "NODE_ENV=test yarn sequelize db:migrate",
    "test:db-create": "NODE_ENV=test yarn sequelize db:create",
    "test:db-drop": "NODE_ENV=test yarn sequelize db:drop",
    "test:init": "yarn test:db-drop; yarn test:db-create; yarn test:migrate",
    "test:start": "NODE_ENV=test NODE_PATH=./dist ./node_modules/.bin/nodemon ./dist",
    "test:run": "NODE_ENV=test NODE_PATH=./dist ./node_modules/.bin/mocha ./dist/server/**/test/*.js ./dist/server/config/config.js",
    "test:watch": "NODE_ENV=test NODE_PATH=./dist ./node_modules/.bin/mocha -w ./dist/server/**/test/*.js ./dist/server/config/config.js"
  }
}
